<!DOCTYPE html>
<html>
  <head>
    <title> TODOAPP </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <body>
    <div class="container d-flex mt-5 w-100">
      <form action="/save" method="POST" class="w-50">
        <h2 class="mb-3 text-center">Enter Task</h2>
        <input name="title" class="form-control w-75 m-auto mb-3" type="text" placeholder="Task Name">
        <textarea name="description" class="form-control w-75 m-auto mb-3" name="" id="" cols="30" rows="10" placeholder="Enter description here.."></textarea>
        <h1 class="w-75 m-auto">
          <button class="btn btn-primary">Add Task</button>
        </h1>
      </form>
      
      <div class="right w-50">
        <% tasks.forEach(function(task){%>
          <div class="alert alert-secondary d-flex justify-content-between ">
            <div>
              <h3 style="text-transform: capitalize;"><%= task.title %></h3>
              <small><%= task.createdAt.toLocaleDateString() %>
                -<%= task.createdAt.toLocaleTimeString() %></small>
              <p><%= task.description %></p>
              <a href="/more/<%= task.id%>" class="btn btn-sm btn-dark">Read More</a>
            </div>
            <span><a href="/delete/<%= task.id%>">âœ–</a></span>
          </div>
          <%})%>
      </div>
    </div>
  </body>
</html>
